generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Projektas {
  id        String   @id @default(cuid())
  lang      Lang     @default(LT)
  title     String   @unique
  date      DateTime
  cover     String
  logoUrl   String?
  tech      Json
  excerpt   String?
  link      String?
  client    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //location
  address        String?   // planned/entered address
  lat            Float?
  lng            Float?

  //electricity
  estimatedKwhPerMonth Float?
  electricityNotes     String?

  // relations
  photos    Photo[]
  tags      ProjektasTag[]

  electricityProviders ProjektasElectricityProvider[]
  assignedWorkers      ProjektasWorker[]
  materials ProjektasMaterial[]
  rcUnikalusNr   String?
  rcKadastroNr   String?
  rcSavivaldybe  String?
  rcPlotasHa     String?   // paliekam string, nes RC grąžina su kableliu "0,2514"
  rcFormavimoData String?
  rcRegistravimoData String?
}

enum ElectricityProviderType {
  SUPPLIER // tiekėjas (Ignitis, Elektrum, Enefit...)
  DSO      // skirstymo operatorius (ESO)
  TSO      // perdavimo operatorius (Litgrid)
}

model ElectricityProvider {
  id        String   @id @default(cuid())
  name      String   @unique
  type      ElectricityProviderType @default(SUPPLIER)
  website   String?
  phone     String?
  email     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects  ProjektasElectricityProvider[]
}

model ProjektasElectricityProvider {
  projektasId String
  providerId  String

  projektas   Projektas           @relation(fields: [projektasId], references: [id], onDelete: Cascade)
  provider    ElectricityProvider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  //per-project provider info
  note        String?
  isPrimary   Boolean  @default(false)

  @@id([projektasId, providerId])
  @@index([providerId])
}

model Worker {
  id        String   @id @default(cuid())
  fullName  String
  email     String?  @unique
  phone     String?
  role      String?  // e.g. "Elektrikas", "Vadovas", etc.

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects  ProjektasWorker[]
}

model ProjektasWorker {
  projektasId String
  workerId    String

  projektas   Projektas @relation(fields: [projektasId], references: [id], onDelete: Cascade)
  worker      Worker    @relation(fields: [workerId], references: [id], onDelete: Cascade)

  // optional assignment details
  position    String?   // role on THIS project
  startDate   DateTime?
  endDate     DateTime?

  @@id([projektasId, workerId])
  @@index([workerId])
}

model ProjektasMaterial {
  projektasId  String
  materialKey  String   // pvz. "cement_cem2_42_5r"
  quantity     Float    @default(1)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  projektas    Projektas @relation(fields: [projektasId], references: [id], onDelete: Cascade)

  @@id([projektasId, materialKey])
  @@index([materialKey])
}

model Tag {
  id        String         @id @default(cuid())
  lang      Lang           @default(LT)
  name      String         @unique
  paraiskos CvTag[]
  projektai ProjektasTag[]
}

model ProjektasTag {
  projektasId String
  tagId       String
  tag         Tag       @relation(fields: [tagId], references: [id], onDelete: Cascade)
  projektas   Projektas @relation(fields: [projektasId], references: [id], onDelete: Cascade)

  @@id([projektasId, tagId])
}

model Photo {
  id          String    @id @default(cuid())
  url         String
  caption     String?
  projektasId String
  projektas   Projektas @relation(fields: [projektasId], references: [id], onDelete: Cascade)

  @@index([projektasId])
}

model Apie {
  id        String   @id @default(cuid())
  lang      Lang     @default(LT)
  title     String   @unique
  content   String
  order     Int
  updatedAt DateTime @updatedAt
}

model Paslauga {
  id        String   @id @default(cuid())
  lang      Lang     @default(LT)
  title     String   @unique
  subtitle  String
  iconUrl   String
  details   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Partneris {
  id        String   @id @default(cuid())
  lang      Lang     @default(LT)
  name      String   @unique
  imageSrc  String
  imageAlt  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Kontaktas {
  id        String   @id @default(cuid())
  lang      Lang     @default(LT)
  label     String   @unique
  value     String
  copyable  Boolean  @default(false)
  icon      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Paraiska {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  position  String
  cvUrl     String?
  message   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags      CvTag[]
}

model CvTag {
  paraiskaId String
  tagId      String
  tag        Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)
  paraiska   Paraiska @relation(fields: [paraiskaId], references: [id], onDelete: Cascade)

  @@id([paraiskaId, tagId])
}

model Darbas {
  id               String   @id @default(cuid())
  lang             Lang     @default(LT)
  title            String   @unique
  location         String?
  type             String?
  description      String?
  responsibilities Json
  salary           String?
  postedAt         DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model HeroPhoto {
  id        String   @id @default(cuid())
  lang      Lang     @default(LT)
  imageUrl  String
  alt       String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Icon {
  id        String   @id @default(cuid())
  name      String   @unique
  imageUrl  String
  alt       String?
  category  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ApiePhoto {
  id        String   @id @default(cuid())
  lang      Lang     @default(LT)
  imageUrl  String
  alt       String?
  caption   String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id        String   @id @default(cuid())
  lang      Lang     @default(LT)
  title     String
  subtitle  String
  iconUrl   String
  details   String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LtMaterialIndex {
  id        Int      @id @default(autoincrement())
  group     String   // pvz. "CEMENT", "STEEL", "CABLES"
  period    String   // "YYYY-MM"
  value     Float
  source    String?  // "manual", "OSP", 
  createdAt DateTime @default(now())

  @@unique([group, period])
  @@index([group, period])
}


enum Lang {
  LT
  EN
}


