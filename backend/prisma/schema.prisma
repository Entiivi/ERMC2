generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Projektas {
  id        String         @id @default(cuid())
  lang      Lang           @default(LT)
  title     String         @unique
  date      DateTime
  cover     String
  logoUrl   String?
  tech      Json
  excerpt   String?
  link      String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  photos    Photo[]
  tags      ProjektasTag[]
}

model Tag {
  id        String         @id @default(cuid())
  lang      Lang           @default(LT)
  name      String         @unique
  paraiskos CvTag[]
  projektai ProjektasTag[]
}

model ProjektasTag {
  projektasId String
  tagId       String
  tag         Tag       @relation(fields: [tagId], references: [id], onDelete: Cascade)
  projektas   Projektas @relation(fields: [projektasId], references: [id], onDelete: Cascade)

  @@id([projektasId, tagId])
}

model Photo {
  id          String    @id @default(cuid())
  url         String
  caption     String?
  projektasId String
  projektas   Projektas @relation(fields: [projektasId], references: [id], onDelete: Cascade)

  @@index([projektasId])
}

model Apie {
  id        String   @id @default(cuid())
  lang      Lang     @default(LT)
  title     String   @unique
  content   String
  order     Int
  updatedAt DateTime @updatedAt
}

model Paslauga {
  id        String   @id @default(cuid())
  lang      Lang     @default(LT)
  title     String   @unique
  subtitle  String
  iconUrl   String
  details   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Partneris {
  id        String   @id @default(cuid())
  lang      Lang     @default(LT)
  name      String   @unique
  imageSrc  String
  imageAlt  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Kontaktas {
  id        String   @id @default(cuid())
  lang      Lang     @default(LT)
  label     String   @unique
  value     String
  copyable  Boolean  @default(false)
  icon      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Paraiska {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  position  String
  cvUrl     String?
  message   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags      CvTag[]
}

model CvTag {
  paraiskaId String
  tagId      String
  tag        Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)
  paraiska   Paraiska @relation(fields: [paraiskaId], references: [id], onDelete: Cascade)

  @@id([paraiskaId, tagId])
}

model Darbas {
  id               String   @id @default(cuid())
  lang             Lang     @default(LT)
  title            String   @unique
  location         String?
  type             String?
  description      String?
  responsibilities Json
  salary           String?
  postedAt         DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model HeroPhoto {
  id        String   @id @default(cuid())
  lang      Lang     @default(LT)
  imageUrl  String
  alt       String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Icon {
  id        String   @id @default(cuid())
  name      String   @unique
  imageUrl  String
  alt       String?
  category  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ApiePhoto {
  id        String   @id @default(cuid())
  lang      Lang     @default(LT)
  imageUrl  String
  alt       String?
  caption   String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id        String   @id @default(cuid())
  lang      Lang     @default(LT)
  title     String
  subtitle  String
  iconUrl   String
  details   String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Lang {
  LT
  EN
}
