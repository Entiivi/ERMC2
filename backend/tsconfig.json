{
  "compilerOptions": {
    "target": "ES2022",                 
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "lib": ["ES2022", "DOM", "DOM.Iterable"],  
    "types": ["node"]                          
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
